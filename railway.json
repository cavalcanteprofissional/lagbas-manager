{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "buildSourceDir": "frontend",
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT"
  }
}
